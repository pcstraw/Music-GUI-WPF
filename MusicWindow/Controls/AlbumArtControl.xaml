<UserControl x:Class="MusicWindow.AlbumArtControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicWindow"
             mc:Ignorable="d" Loaded="UserControl_Loaded" Background="Black" Height="320" Width="400">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Image x:Name="ImageBox" Margin="0" OpacityMask="Black" Source="music_gui_logo.png" Grid.Row="1" MouseLeftButtonUp="ImageBox_MouseLeftButtonUp"/>
        <Viewbox>
            <Label PreviewMouseLeftButtonUp="Viewbox_PreviewMouseLeftButtonUp" Name="titleLabel" Content="Track Name" Foreground="White" FontSize="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Top" Width="Auto" Height="39"/>
        </Viewbox>
        <local:MusicInfoControl x:Name="infoControl" Width="Auto" HorizontalAlignment="Stretch" Margin="0" Grid.Row="1" VerticalAlignment="Top" Visibility="Hidden"/>
    </Grid>
</UserControl>
