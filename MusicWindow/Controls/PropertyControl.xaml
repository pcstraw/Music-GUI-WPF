<UserControl x:Class="MusicWindow.PropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicWindow"
             mc:Ignorable="d" d:DesignWidth="800">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="propertyLabel" 
               Content="Property Name" 
               Margin="0" 
               Background="{x:Null}" 
               HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Center" 
               FontSize="36" Foreground="White" Width="320" HorizontalAlignment="Right"/>
        <TextBox x:Name="textBox" 
                Grid.Column="1" 
                Margin="0" 
                Text="TextBox" 
                FontSize="36" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                TextAlignment="Center" 
                Background="White" 
                BorderBrush="{x:Null}" Height="57.8833333333333" MinWidth="480"/>
    </Grid>
</UserControl>
