<UserControl x:Class="MusicWindow.PlaylistFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicWindow"
             xmlns:src="clr-namespace:Glaxion.Music"
             mc:Ignorable="d" Width="320" Height="240">

    <Grid>
        <TreeView x:Name="treeView" Margin="0,23,0,0" Background="#FFFFE6D2">
            <TreeView.ContextMenu>
                <ContextMenu Name="PlaylistContext">
                    <MenuItem Header="Open Playlist" Click="OpenPlaylistFileContext_Click"/>
                    <MenuItem Header="Remove Playlist" Click="RemovePlaylistFileContext_Click"/>
                    <MenuItem Header="Browse Playlists" Click="BrowsePlaylistFileContext_Click"/>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
        <TextBox Height="23" TextWrapping="Wrap" Text="Search &lt;Not Implemented yet&gt;" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
